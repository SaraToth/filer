<main class="files">
    <h2 class="file-title"><%=locals.currentFolder.folderName%></h2>
    <div class="table-wrapper">
        <table>
        <tr>
            <th>Name</th>
            <th>Created</th>
            <th>link</th>
            <th></th>
        </tr>
        <% if (locals.files) {%>
            <% files.forEach((file) => {%>
                <tr>
                    <td><%=file.fileName%></td>
                    <td><%=file.createdAt.toLocaleDateString()%></td>
                    <td><%=file.link%></td>
                    <td class="kebab-dropdown">
                        <a href="#" class="kebab">â‹®</a>
                        <div class="kebab-content">
                                <form action="/files/<%= file.id %>?_method=DELETE" method="post">
                                    <button>Delete file</button>
                                </form>
                                <form action="#">
                                    <button>Download file</button>
                                </form>
                        </div>
                    </td>
                </tr>
            <%})%>
        <%}%>
    </table>
    </div>
</main>
